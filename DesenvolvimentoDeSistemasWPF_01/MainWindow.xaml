<Window x:Class="DesenvolvimentoDeSistemasWPF_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camboya" Height="455" Width="525" MinHeight="455" MinWidth="525">

    <!-- Root -->
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>

        <Grid>
            <Border Background="LightSteelBlue" BorderBrush="SteelBlue" BorderThickness="1.5" />

            <Border Grid.Row="1" Background="Gainsboro"/>

            <Label Grid.Row="0" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">
                SISTEMA DE ALOCAÇÃO DE PROFESSORES CAMBOYA 3000
            </Label>

            <Grid Grid.RowSpan="1" Grid.Row="1">

                <Border Grid.Row="1" Grid.Column="1" BorderBrush="SteelBlue" BorderThickness="1.5" Background="LightSteelBlue"></Border>

                <!-- LOG IN -->
                <Frame Name="LogInFrame" Grid.Row="1" Grid.Column="1" Source="FrameLogin.xaml" NavigationUIVisibility="Hidden">

                </Frame>

            </Grid>
        </Grid>
    </DockPanel>

</Window>
